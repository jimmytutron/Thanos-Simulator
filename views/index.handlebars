<div class = "container">

	<div class="row justify-content-center mt-5">
		<div class="col-12 col-md-10">
			<img class="img-fluid" src="/assets/imgs/logo.png">
		</div>
	</div>

	<div class="thanos">
		<img src="/assets/imgs/thanos.png">
	</div>

	<div class="row hero justify-content-center">
		<div class="assemble col-12 col-md-5 text-center">
			<h2 class="text-center">Assemble</h2>
				{{#each avengers}}
				{{#if alive}}
				{{> avengers/dontfeelsogood alive=false}}
				{{/if}}
				{{/each}}
		</div>
		<div class="assemble col-12 col-md-5">
			<h2 class="text-center">Disassemble</h2>
				{{#each avengers}}
				{{#unless alive}}
				<div class="row justify-content-center my-1">
	<div class="col-12 disassemble">
		<h5 class="text-center"><span class="deadman">{{name}}</span> doesn't feel so good...</h5>
	</div>
			    </div>
			    {{/unless}}
				{{/each}}
		</div>
	</div>

	<div class="row form justify-content-center mt-4">
		<div class="col-12 col-md-10">
			<h3 class="text-center">Who's about to not feel so good?</h3>
		</div>
	</div>
	<div class="row justify-content-center">
			<div class="col-12 col-md-8">
			<form class="add-avenger">
			  <div class="form-group">
    			<input type="text" class="form-control" id="avengerName" placeholder="I am Groot">
    			<div id="invalid-feedback">
    				&nbsp;
  			  	</div>
  			  <button class="btn assemble-button" type="submit">Assemble</button>
			</form>							
			</div>
	</div>
</div>
