<div class = "container">

	<div class="row justify-content-center my-4">
		<div class="col-12 col-md-10">
			<h1 class="text-center">Thanos Simulator</h1>
		</div>
	</div>

	<div class="row justify-content-center">
		<div class="col-12 col-md-5">
			<h2 class="text-center">Assemble</h2>
				{{#each avengers}}
				{{#if alive}}
				{{> avengers/dontfeelsogood alive=false}}
				{{/if}}
				{{/each}}
		</div>
		<div class="col-12 col-md-5">
			<h2 class="text-center">Disassemble</h2>
				{{#each avengers}}
				{{#unless alive}}
				<div class="row justify-content-center my-1">
	<div class="col-12">
	<button class=" btn btn-warning">
		{{name}} doesn't feel so good...
	</button>
	</div>
			    </div>
			    {{/unless}}
				{{/each}}
		</div>
	</div>

	<div class="row justify-content-center my-4">
		<div class="col-12 col-md-10">
			<h3 class="text-center">Which Avenger is about to not feel so good?</h3>
			<form class="add-avenger">
			  <div class="form-group">
    			<input type="text" class="form-control" id="avengerName" placeholder="I am Groot">
  			  </div>
  			  <button class="btn btn-danger" type="submit">Assemble</button>
			</form>
		</div>
	</div>

</div>